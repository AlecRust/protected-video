{
  "name": "protected-video",
  "version": "1.6.0",
  "private": true,
  "description": "YouTube/Vimeo player that prevents easy sharing of the video.",
  "main": "admin/js/protected-video-block.js",
  "repository": "https://github.com/AlecRust/protected-video",
  "author": "Alec Rust <me@alecrust.com>",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "block"
  ],
  "scripts": {
    "start": "webpack watch -c webpack-public.js & wp-scripts start src/protected-video-block.js --output-path=admin/js",
    "build": "webpack -c webpack-public.js && wp-scripts build src/protected-video-block.js --output-path=admin/js",
    "lint": "prettier '**/*.{html,php,js,md}' --write; eslint '**/*.js' --fix",
    "release": "release-it --ci",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@prettier/plugin-php": "^0.17.6",
    "@wordpress/scripts": "^19.2.2",
    "auto-changelog": "^2.3.0",
    "babel-loader": "^8.2.3",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "get-video-id": "^3.5.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "release-it": "^14.12.3",
    "replace-in-files-cli": "^2.0.0",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "lint-staged": {
    "*.{js,php,md}": "prettier --write",
    "*.js": "eslint --fix"
  }
}

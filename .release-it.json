{
	"plugins": {
		"@release-it/bumper": {
			"out": [
				"protected-video.php",
				"src/block.json",
				{
					"file": ".cliff/cliff-readme-txt.toml",
					"type": "text/plain"
				}
			]
		}
	},
	"hooks": {
		"after:bump": [
			"git-cliff -c .cliff/cliff-changelog-md.toml -o CHANGELOG.md --tag ${version}",
			"git-cliff -c .cliff/cliff-readme-txt.toml -o readme.txt --tag ${version}"
		]
	},
	"git": {
		"commitArgs": ["-S"],
		"tagArgs": ["-s"]
	},
	"npm": {
		"publish": false
	},
	"github": {
		"release": true,
		"releaseName": "${version}",
		"releaseNotes": "git-cliff -c .cliff/cliff-changelog-md.toml --strip header --tag ${version} ${latestTag}..HEAD"
	}
}

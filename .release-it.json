{
  "plugins": {
    "@release-it/bumper": {
      "out": [
        "protected-video.php",
        "src/block.json",
        {
          "file": ".cliff/cliff-readme-txt.toml",
          "type": "text/plain"
        }
      ]
    }
  },
  "hooks": {
    "before:init": "npm run lint",
    "after:bump": ["node .cliff/build-changelogs.js"]
  },
  "git": {
    "commitArgs": ["-S"],
    "tagArgs": ["-s"]
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "${version}"
  }
}

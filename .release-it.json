{
  "hooks": {
    "before:init": "yarn lint",
    "after:bump": [
      "replace \"${latestVersion}'\" \"${version}'\" protected-video.php",
      "replace 'Version:           ${latestVersion}' 'Version:           ${version}' protected-video.php",
      "auto-changelog -p --output readme.txt --template readme.hbs --commit-limit false"
    ]
  },
  "git": {
    "commitArgs": ["--no-verify", "-S"],
    "tagArgs": ["-s"]
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "${version}"
  }
}
